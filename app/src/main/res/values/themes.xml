<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BookManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundLight</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Font Family (Use actual font file names) -->
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!-- Action Bar and Button Styles -->
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Custom Action Bar Theme -->
    <style name="ActionBarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/appBarColor</item>
        <item name="titleTextColor">@color/buttonTextColor</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonBackgroundColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item> <!-- Use bold version for buttons -->
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Custom Checkbox Style -->
    <style name="CustomCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
